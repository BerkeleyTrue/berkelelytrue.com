.navbar
  align-items: flex-start
  border-bottom: 1px solid $primary
  background-color: analogous($primary)[1]
  clearfix()
  display: flex
  flex-flow: row wrap
  justify-content: space-between
  min-height: 20%
  padding-top: 10px
  padding-left: 20px
  padding-right: 20px

.brand
  flex 1
  height 10%
  img
    position relative
    width 20%
    +below(800px)
      height 100%
      width 100%

.links
  flex 1
  list-style-type none
  ul
    display flex
    flex-flow row wrap
    justify-content: flex-end
    align-items: flex-end
    li
      color $primary
      display inline
      padding 0 30px
      &:hover
        background-color $secondary
