ks-normalize();
ks-box-sizing-reset();
ks-font-face("Roboto", "../../fonts/roboto/Roboto-Regular", normal, formats: truetype)

body
  width 100vw
  font-family "Roboto"
  background lighten($secondary, 50%)

a
  color: black

.app
  $grid(column)
  min-height 100vh

.app-child
  $cell(12,, 0)
  flex-grow 1
